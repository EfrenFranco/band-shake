<div class="container mt-3">
  <h1><%= @offering.user.full_name %>'s Profile</h1>
</div>
<div class="container show-main mt-3">
  <div>
    <div class="cards-show">
      <div class="row">
        <div class="col">
          <div class="card-trip card-show-page">
            <iframe src="<%= @offering.url %>" width= 100% height="300" frameborder="0" allowfullscreen> </iframe>
            <div class="card-trip-infos">
              <div>
                <h2><%= @offering.user.full_name %></h2>
                <%= @offering.user.experience %>
              </div>
              <h2 class="card-trip-pricing"> <%= @offering.price %>Â¥</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-trip card-show-page">
      <ul>
        <li>Location: <%= @offering.user.city %></li>
        <li>Instruments: <%= @offering.instrument %></li>
        <li>Experience: <%= @offering.user.experience %></li>
        <li>Availabilty: <%= @offering.availability %></li>
        <li>Email: <%= @offering.user.email %></li>
      </ul>
    </div>
  </div>
  <div class="card-trip card-show-page-booking">
    <div class="col-12">
      <h2 id= "booking-title" class="my-2">Book me!</h2>
      <%= render 'shared/new_booking_form'  %>
    </div>
  </div>
</div>
